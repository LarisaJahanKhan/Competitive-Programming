#include <iostream>
#include<algorithm>
using namespace std;
void selectSort(int arr[],int n)
{
    for (int i=0; i<n-1; i++)
    {
        int min_ind= i;
        for(int j=i+1; j<n; j++)
        {
            if(arr[j]<arr[min_ind])
            {
                min_ind=j;
            }
        }
        swap(arr[min_ind], arr[i]);
    }
}
int main()
{
    int array[]= {10, 5, 8, 20, 2, 18};
    int n = sizeof(array) / sizeof(array[0]);
    selectSort(array,n);
    for(int i=0; i<n; i++)
    {
        cout<<array[i]<<" ";
    }
    return 0;
    
}