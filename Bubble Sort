#include <iostream>
#include<algorithm>
using namespace std;
void bubbleSort(int arr[],int n)
{
    for(int i=0; i<n-1; i++)
    {
        bool swapped= false;
        for(int j=0; j<n-i-1; j++)
        {
            if(arr[j]>arr[j+1])
            {
                swap(arr[j], arr[j+1]);
                swapped= true;
            }
        }
        if(swapped==false)
        {
            break;
        }
    }
    
    
}
int main() {
    int array[]={10, 20, 30, 40};
    int n=sizeof(array[0]);
    bubbleSort(array,n);
    for( int i=0; i<n; i++)
    {
        cout<<array[i]<<" ";
    }

    return 0;
}